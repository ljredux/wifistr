{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-64bit",
            "type": "shell",
            "command": "mingw32-make",
            "args": [
                "--always-make"
            ],
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "build-64bit-opt",
            "type": "shell",
            "command": "mingw32-make",
            "args": [
                "--always-make",
                "OPTIMISED=1"
            ],
            "problemMatcher": "$gcc",
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "build-32bit",
            "type": "shell",
            "command": "mingw32-make",
            "args": [
                "--always-make",
                "ARCH=x32"
            ],
            "problemMatcher": "$gcc",
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "build-32bit-opt",
            "type": "shell",
            "command": "mingw32-make",
            "args": [
                "--always-make",
                "ARCH=x32",
                "OPTIMISED=1"
            ],
            "problemMatcher": "$gcc",
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        }
    ]
}