{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-64bit",
            "type": "shell",
            "command": "gcc",
            "args": [
                "${workspaceFolder}/wifistr.c",
                "-o",
                "${workspaceFolder}/bin/x64/wifistr.exe",
                "-lwlanapi"
            ],
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "build-64bit-sizeopt",
            "type": "shell",
            "command": "gcc",
            "args": [
                "${workspaceFolder}/wifistr.c",
                "-o",
                "${workspaceFolder}/bin/x64/wifistr.exe",
                "-lwlanapi",
                "-s",
                "-O2",
                "-ffunction-sections",
                "-fdata-sections",
                "\\\"-Wl,--gc-sections\\\""
            ],
            "problemMatcher": "$gcc",
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Create Bin Folders",
            "type": "shell",
            "command": "pwsh",
            "args": [
                "-Command",
                "\"'${workspaceFolder}/bin/x64', '${workspaceFolder}/bin/x32' | ForEach-Object { New-Item -ItemType Directory -Path $_ -Force }\""
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            }
        }
    ]
}